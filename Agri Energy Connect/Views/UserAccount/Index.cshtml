<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card" style="width: 21rem; height: 13rem;">
                <div class="card-body">
                    <h4 class="card-title">@Html.DisplayFor(modelItem => item.FullName)</h4>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Email)</p>
                    <p class="card-text">Role: @Html.DisplayFor(modelItem => item.UserRoleNavigation.UserRole)</p>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-secondary">View Details</a>
                     <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-secondary">Change Role</a>
                </div>
            </div>
        </div>
    }
</div>